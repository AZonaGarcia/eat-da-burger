<div class="container" id="eatDaBrgr">
    <h1>BURGERS!!! NOM NOM NOM</h1>

    <h2>Burgers to DEVOUR!</h2>

    <ul>
        {{#each burger}}
        {{#unless devour}}

        {{> burgerBlock devour=true}}
        {{/unless}}
        {{/each}}
    </ul>

    <h2>No Thank You!</h2>

    <ul>
        {{#each burger}}
        {{#if devour}}
        {{> burgerBlock devour=false}}
        {{/if}}
        {{/each}}
    </ul>

    <h2>Add A Yummy Burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="brgrName">Burger:</label>
            <input type="text" id="brgrName" name="name">
        </div>

        <div class="form-group">
            <label for="brgr">Whatcha gonna do?</label><br>
            <input type="radio" name="devour" value="0" checked> DEVOUR IT! <br>
            <input type="radio" name="devour" value="1"> Share!
        </div>

        <button type="submit">Serve up your choice!</button>
    </form>

    
